# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/tripholiday
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tripholiday

# JWT Secret (Change this to a random secure string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration
JWT_EXPIRE=7d

# Admin Default Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@tripholiday.com
ADMIN_PASSWORD=Admin@123
ADMIN_NAME=Administrator

# CORS Origin (Frontend URL)
CORS_ORIGIN=http://localhost:3000
# For production, use your actual domain:
# CORS_ORIGIN=https://tripholiday.com

# File Upload Settings
MAX_FILE_SIZE=5242880
# 5MB = 5242880 bytes

# Rate Limiting
RATE_LIMIT_WINDOW=15
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
# Max 100 requests per window
